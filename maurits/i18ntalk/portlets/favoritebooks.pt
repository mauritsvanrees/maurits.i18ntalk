<dl class="portlet portletFavoriteBooks"
    i18n:domain="maurits.i18ntalk">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span>
           Header
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
      <ul>
        <li tal:repeat="book view/books">
          <h3 tal:content="book/Title" />
          <div tal:content="book/Description" />
          <p i18n:translate="">This book has <span class="stars" i18n:name="stars" tal:content="book/stars" /> stars.</p>
        </li>
      </ul>
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span>
           Footer
        </span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
